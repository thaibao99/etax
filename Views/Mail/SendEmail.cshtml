@model prjetax.Models.SendEmailViewModel
@{
    ViewData["Title"] = "Gửi Email";
    var entId = ViewBag.EnterpriseId;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SendEmail" asp-controller="Mail" asp-route-id="@entId"
      method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="ToEmail" class="form-label">
            @Html.DisplayNameFor(m => m.ToEmail) <span class="text-danger">*</span>
        </label>
        <input asp-for="ToEmail" class="form-control" readonly />
        <span asp-validation-for="ToEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Subject" class="form-label">
            @Html.DisplayNameFor(m => m.Subject) <span class="text-danger">*</span>
        </label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Body" class="form-label">
            @Html.DisplayNameFor(m => m.Body) <span class="text-danger">*</span>
        </label>
        <textarea asp-for="Body" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Deadline" class="form-label">
            @Html.DisplayNameFor(m => m.Deadline)
        </label>
        <input asp-for="Deadline" type="date" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">
            @Html.DisplayNameFor(m => m.Notes)
        </label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">
            @Html.DisplayNameFor(m => m.Rating)
        </label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Attachment" class="form-label">
            @Html.DisplayNameFor(m => m.Attachment)
        </label>
        <input asp-for="Attachment" type="file" class="form-control" />
        <span asp-validation-for="Attachment" class="text-danger"></span>
        <div class="form-text">Không bắt buộc, chỉ PDF, tối đa 5MB.</div>
    </div>

    <button type="submit" class="btn btn-primary">Gửi</button>
    <a asp-action="Index" asp-controller="Enterprises" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
